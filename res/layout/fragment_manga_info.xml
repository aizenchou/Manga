<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/mangainfo_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/cover" />

        <TextView
            android:id="@+id/mangainfo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/mangainfo_cover"
            android:layout_toRightOf="@+id/mangainfo_cover"
            android:text="name" />

        <TextView
            android:id="@+id/mangainfo_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/mangainfo_name"
            android:layout_below="@+id/mangainfo_name"
            android:text="author" />

        <TextView
            android:id="@+id/mangainfo_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/mangainfo_name"
            android:layout_below="@+id/mangainfo_author"
            android:text="status"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/mangainfo_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/mangainfo_cover"
            android:layout_below="@+id/mangainfo_cover"
            android:text="desc"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageButton
            android:id="@+id/mangainfo_btn_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/mangainfo_desc"
            android:layout_below="@+id/mangainfo_desc"
            android:layout_marginTop="30dp"
            android:src="@android:drawable/ic_menu_slideshow" />

        <com.aizen.manga.view.NoScrollGridView
            android:id="@+id/mangainfo_chaptergrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/mangainfo_btn_play"
            android:layout_below="@+id/mangainfo_btn_play"
            android:layout_marginTop="27dp"
            android:numColumns="4" >
        </com.aizen.manga.view.NoScrollGridView>
    </RelativeLayout>

</ScrollView>